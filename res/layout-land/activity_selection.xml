<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.bg.fhdw.bfwi413a.karthago.ConfigActivity" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" >

        <RelativeLayout
            android:id="@+id/r_layout_links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_cardfile1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonshape_login"
                android:text="@string/cardfile1"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_cardfile2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/btn_cardfile1"
                android:background="@drawable/buttonshape_login"
                android:text="@string/cardfile2"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_cardfile3"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/btn_cardfile2"
                android:background="@drawable/buttonshape_login"
                android:text="@string/cardfile3"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_cardfile4"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn_cardfile3"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonshape_login"
                android:text="@string/cardfile4"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/r_layout_links" >

            <Button
                android:id="@+id/btn_cardfile5"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/buttonshape_login"
                android:text="@string/cardfile5"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_cardfile6"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn_cardfile5"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonshape_login"
                android:text="@string/cardfile6"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_cardfile7"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn_cardfile6"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonshape_login"
                android:text="@string/cardfile7"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_cardfile8"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn_cardfile7"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonshape_login"
                android:text="@string/cardfile8"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/logo_glasses2" />

    <TextView
        android:id="@+id/textview_cardfile_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="@string/text_textview_cardfile_selection"
        android:textColor="#296E87"
        android:textSize="40sp" />

</RelativeLayout>