<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.bg.fhdw.bfwi413a.karthago.ConfigActivity" >

    <!-- Der Login-Button muss ein marginLeft von 4dp haben, weil der Spinner "weiter links" anfÃ¤ngt -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="570dp"
            android:layout_height="350dp"
            android:layout_marginLeft="0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_full2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <Spinner
                android:id="@+id/spn_userlist"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/btn_login_start"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/spn_userlist"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/buttonshape_standard"
                android:text="@string/login"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/new_user"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/buttonshape_link"
            android:text="@string/new_user"
            android:textColor="#296E87"
            android:textSize="16sp" />
    </RelativeLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical" />

</LinearLayout>