<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.bg.fhdw.bfwi413a.karthago.ConfigActivity" >

    <RelativeLayout
		android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="570dp"
            android:layout_height="350dp"
            android:layout_marginLeft="0dp"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_full2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

         <TextView
            android:id="@+id/salutations1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_alignLeft="@+id/btn_start_selection"
            android:text="@string/hello"
            android:textColor="#296E87"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/set_salutations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/salutations1"
            android:layout_marginLeft="15dp"
            android:textColor="#296E87"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/buttonshape_link"
            android:text="@string/logout"
            android:textColor="#296E87"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_start_selection"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/salutations1"
            android:layout_marginTop="45dp"
            android:background="@drawable/buttonshape_standard"
            android:text="@string/start_selection"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_start_statistics"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_start_config"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape_standard"
            android:text="@string/statistics"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_start_config"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_start_selection"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonshape_standard"
            android:text="@string/start_config"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </RelativeLayout>

</LinearLayout>