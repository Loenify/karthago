<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.bg.fhdw.bfwi413a.karthago.ConfigActivity" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#296E87"
        android:textSize="40sp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spn_sort"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/spn_learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="119dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/textview_question_mc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spn_learn"
        android:layout_below="@+id/spn_learn"
        android:layout_marginTop="38dp"
        android:text="User wechseln / lÃ¶schen" />

    
     <Button
        android:id="@+id/btn_changeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/spn_userlist_config"
        android:layout_alignTop="@+id/spn_userlist_config"
        android:layout_marginTop="33dp"
        android:text="@string/changeUser" />

    <Spinner
        android:id="@+id/spn_userlist_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textview_question_mc"
        android:layout_below="@+id/textview_question_mc"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_deleateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spn_userlist_config"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:text="@string/deleateUser" />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title"
        android:layout_toRightOf="@+id/spn_sort"
        android:src="@drawable/info"
        android:text="@string/info" />

</RelativeLayout>
