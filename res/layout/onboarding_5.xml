<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/btn_start_config"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_start_selection"
        android:layout_centerHorizontal="true"
        android:text="@string/start_config"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:background="@drawable/buttonshape_standard" />

    <Button
        android:id="@+id/btn_logout"
		android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttonshape_link"
        android:text="@string/logout"
        android:textColor="#296E87"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_start_statistics"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_start_config"
        android:layout_centerHorizontal="true"
        android:text="@string/statistics"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:background="@drawable/buttonshape_standard" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo_full2" />

    <Button
        android:id="@+id/btn_start_selection"
        android:layout_marginTop="55dp"
		android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/salutations1"
        android:layout_centerHorizontal="true"
        android:text="@string/start_selection"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:background="@drawable/buttonshape_standard" />

    <TextView
        android:id="@+id/salutations1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#296E87"
        android:textSize="30sp"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="112dp"
        android:text="" />

    <TextView
        android:id="@+id/set_salutations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#296E87"
        android:textSize="30sp"
        android:layout_alignLeft="@+id/btn_start_selection"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="35dp"
        android:text="" />

</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66FFFFFF"
    android:id="@+id/top_layout">

    <TextView
        android:id="@+id/tvShoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#1a4351"
        android:gravity="center"
        android:padding="5dp"
        android:text="Das ist das Hauptmen체. Von hier aus kannst Du Deine Kartei ausw채hlen, Optionen ver채ndern oder Dir Deine Statistiken ansehen."
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Tippe auf den Screen f체r &apos;Weiter&apos;"
        android:textColor="#1a4351"
        android:textSize="20sp"
        android:textStyle="italic" />
    
</RelativeLayout>

</FrameLayout>