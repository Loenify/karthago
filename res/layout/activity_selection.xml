<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.bg.fhdw.bfwi413a.karthago.ConfigActivity" >

    <TextView
        android:id="@+id/textview_cardfile_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/text_textview_cardfile_selection"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_cardfile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textview_cardfile_selection"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="24dp"
        android:text="@string/cardfile1" />

    <Button
        android:id="@+id/btn_cardfile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_cardfile1"
        android:layout_below="@+id/btn_cardfile1"
        android:layout_marginRight="15dp"
        android:text="@string/cardfile2" />

    <Button
        android:id="@+id/btn_cardfile3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_cardfile2"
        android:layout_below="@+id/btn_cardfile2"
        android:text="@string/cardfile3" />

    <Button
        android:id="@+id/btn_cardfile4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_cardfile1"
        android:layout_below="@+id/btn_cardfile3"
        android:text="@string/cardfile4" />

    <Button
        android:id="@+id/btn_cardfile5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_cardfile4"
        android:layout_below="@+id/btn_cardfile4"
        android:text="@string/cardfile5" />

    <Button
        android:id="@+id/btn_cardfile6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_cardfile3"
        android:layout_below="@+id/btn_cardfile5"
        android:text="@string/cardfile6" />

    <Button
        android:id="@+id/btn_cardfile7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_cardfile6"
        android:layout_below="@+id/btn_cardfile6"
        android:text="@string/cardfile7" />

    <Button
        android:id="@+id/btn_cardfile8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_cardfile4"
        android:layout_alignBottom="@+id/btn_cardfile4"
        android:layout_alignParentRight="true"
        android:text="@string/cardfile8" />

</RelativeLayout>
